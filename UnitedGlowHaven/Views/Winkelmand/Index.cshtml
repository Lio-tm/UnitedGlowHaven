@model UnitedGlowHaven.ViewModels.WinkelmandViewModel;
@{
    ViewData["Title"] = "Winkelmand";
}

<h1>@ViewData["Title"]</h1>

<table class="table bg-custom-lighter" style="width: 100%">
    <thead class="px-2">
        <tr>
            <th class="px-2">
                @Html.DisplayNameFor(v => v.WinkelmandProducten[0].Product.Afbeelding)
            </th>
            <th class="px-2">
                @Html.DisplayNameFor(v => v.WinkelmandProducten[0].Product.Naam)
            </th>
            <th class="px-2">
                @Html.DisplayNameFor(v => v.WinkelmandProducten[0].Product.ProductNummer)
            </th>
            <th class="px-2">
                @Html.DisplayNameFor(v => v.WinkelmandProducten[0].Aantal)
            </th>
            <th class="px-2">
                @Html.DisplayNameFor(v => v.WinkelmandProducten[0].Product.Prijs)
            </th>
            <th class="px-2">
                Totaal
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.WinkelmandProducten)
        {
            <tr>
                <td class="px-2">
                    <img src="/images/@product.Product.Afbeelding" alt="Card image cap" style="width: 3rem;" />
                </td>
                <td class="px-2">
                    @Html.DisplayFor(modelitem => product.Product.Naam)
                </td>
                <td class="px-2">
                    @Html.DisplayFor(modelitem => product.Product.ProductNummer)
                </td>
                <td class="px-2">
                    @Html.DisplayFor(modelitem => product.Aantal)
                </td>
                <td class="px-2">
                    @Html.DisplayFor(modelitem => product.Product.Prijs)
                </td>
                <td class="px-2">
                    @Html.DisplayFor(modelitem => product.SubTotaal)
                </td>
                <td><a class="button" asp-action="DeleteProductFromShoppingcart" asp-route-id="@product.WinkelmandProductId">Verwijderen</a></td>
                  
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="px-2">TOTAAL</td>
            <td class="px-2"></td>
            <td class="px-2"></td>
            <td class="px-2"></td>
            <td class="px-2"></td>
            <td class="px-2">
                @Model.Totaal
            </td>
            <td><a class="btn btn-primary" asp-action="Afrekenen" asp-route-id="@Model.WinkelmandId">Afrekenen</a></td>
        </tr>
    </tfoot>
</table>

   
    

