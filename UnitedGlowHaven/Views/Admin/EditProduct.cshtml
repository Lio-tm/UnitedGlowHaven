@model UnitedGlowHaven.ViewModels.ProductDetailsViewModel
@{
    ViewData["Title"] = "Product aanpassen";
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<form asp-action="EditProduct">
    <input type="hidden" asp-for="ProductId" />
    <div class="row mt-5">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Naam" class="control-label">@Html.DisplayNameFor(model => this.Model.Naam)</label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductNummer" class="control-label">@Html.DisplayNameFor(model => this.Model.ProductNummer)</label>
                <input asp-for="ProductNummer" class="form-control" />
                <span asp-validation-for="ProductNummer" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Beschrijving" class="control-label">@Html.DisplayNameFor(model => this.Model.Beschrijving)</label>
                <textarea asp-for="Beschrijving" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Afbeelding" class="control-label">@Html.DisplayNameFor(model => this.Model.Afbeelding)</label>
                <input asp-for="Afbeelding" class="form-control" />
                <span asp-validation-for="Afbeelding" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prijs" class="control-label">@Html.DisplayNameFor(model => this.Model.Prijs)</label>
                <input asp-for="Prijs" class="form-control" />
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ml-2">
            <input type="submit" value="Aanpassen" class="btn" />
            <a asp-action="Producten" class="btn">Terug</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
