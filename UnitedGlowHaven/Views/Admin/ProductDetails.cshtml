@model UnitedGlowHaven.ViewModels.ProductDetailsViewModel
@{
    ViewData["Title"] = Model.Naam;
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<table class="table table-bordered table-striped mt-5">
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.ProductNummer)</td>
        <td>@this.Model.ProductNummer</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.Naam)</td>
        <td>@this.Model.Naam</td>
    </tr>
    <tr>
        <td>@Html.DisplayNameFor(model => this.Model.Beschrijving)</td>
        <td>@this.Model.Beschrijving</td>
    </tr>
    
</table>

