@model UnitedGlowHaven.ViewModels.ProductDetailsViewModel;
@{
    ViewData["Title"] = @Model.Naam;
}


<div class="card flex-row flex-wrap bg-custom-lighter p-2">
        <div class="card-header">
        <img src="@Model.Afbeelding" alt="Card image cap" style="width: 30rem;"/>
        </div>
        <div class="card-block">
        <div class="card-block px-2">
            <h4 class="card-title">@Model.Naam</h4>
            <ul class="list-group">
                <li class="list-group-item bg-custom-lighter list-group-item-product">Productnummer : @Model.ProductNummer</li>
                <li class="list-group-item bg-custom-lighter list-group-item-product">Prijs : @Model.Prijs €</li>
                <li class="list-group-item bg-custom-lighter list-group-item-product">Beschrijving : @Model.Beschrijving</li>
                <li class="list-group-item bg-custom-lighter list-group-item-product">Kleur : @Model.Kleur.Naam</li>
                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Maat
                    </a>
                    
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        @foreach (var productmaat in Model.ProductMaten)
                        {
                            <a class="dropdown-item" href="#">@productmaat.Maat.Naam</a>
                        }
                    </div>
                </div>
            </ul>
            <form asp-controller="Winkelmand" asp-action="NieuwWinkelmandProduct">
                <input type="hidden" asp-for="ProductId"/>
                <input type="submit" value="kopen" class="btn btn-primary"/>
            </form>
        </div>
            
        </div>
</div>

@Html.ActionLink("Terug", "Index", "Product");
