@model UnitedGlowHaven.ViewModels.ProductListViewModel;
@{
    ViewData["Title"] = "Home";
}

<div class="container p-5">
    <div class="row">
        <div class="col-sm">
            <ul class="list-group bg-transparent">
                <a class="list-group-item list-group-item-action bg-transparent" asp-controller="categorie" asp-action="Index" asp-route-id=1>broeken</a>
                <a class="list-group-item list-group-item-action bg-transparent" asp-controller="categorie" asp-action="Index" asp-route-id=2>t-shirts</a>
                <a class="list-group-item list-group-item-action bg-transparent" asp-controller="categorie" asp-action="Index" asp-route-id=3>rokken</a>
                <a class="list-group-item list-group-item-action bg-transparent" asp-controller="categorie" asp-action="Index" asp-route-id=4>kleedjes</a>
                <a class="list-group-item list-group-item-action bg-transparent" asp-controller="categorie" asp-action="Index" asp-route-id=5>jassen</a>
                <a class="list-group-item list-group-item-action bg-transparent" asp-controller="categorie" asp-action="Index" asp-route-id=6>truien</a>
            </ul>
        </div>
        <div class="col-sm">
            <img src="~/images/UGHbanner.png"/>
        </div>
    </div>
</div>

<div class="container p-5 bg-custom-lighter">
    <div class="row">
        <h3 class="custom-text-color mb-4">Meest Verkocht</h3>
    </div>
    <div class="row">
        @foreach(var product in Model.Producten)
        {
            <div class="card bg-custom-lighter p-2" style="width: 16rem; height: 28rem;">
                <a asp-controller="product" asp-action="details" asp-route-id="@product.ProductId">
                <img class="card-img-top" src="~/images/@product.Afbeelding" alt="Card image cap" style="height:20rem">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item bg-custom-lighter list-group-item-product">@product.Naam</li>
                        <li class="list-group-item bg-custom-lighter list-group-item-product">Prijs: @product.Prijs</li>
                    </ul>
                </div>
                </a>
            </div>
        }
    </div>
</div>


